if ARCH_MX7

config MX7
	bool
	select ROM_UNIFIED_SECTIONS
	default y

config MX7D
	select ROM_UNIFIED_SECTIONS
	bool

choice
	prompt "MX7 board select"
	optional

config TARGET_MX7DSABRESD
	bool "mx7dsabresd"
	select MX7D
	select DM
	select DM_THERMAL

config TARGET_WARP7
	bool "warp7"
	select MX7D
	select DM
	select DM_THERMAL

endchoice

config SYS_SOC
	default "mx7"

source "board/freescale/mx7dsabresd/Kconfig"
source "board/warp7/Kconfig"

endif
